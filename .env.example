# Email CSV Extractor Configuration
# Copy this file to .env and fill in your actual values

# Azure AD Authentication
AZURE_CLIENT_ID=your-azure-app-client-id
AZURE_CLIENT_SECRET=your-azure-app-client-secret
AZURE_TENANT_ID=your-azure-tenant-id
AZURE_AUTHORITY=https://login.microsoftonline.com

# Email Configuration
EMAIL_MAILBOX_ADDRESS=your-monitored-mailbox@company.com
EMAIL_POLLING_INTERVAL=300
EMAIL_MAX_MESSAGES_PER_POLL=50

# SharePoint/Teams Configuration
SHAREPOINT_TEAM_ID=your-teams-team-id
SHAREPOINT_CHANNEL_ID=your-teams-channel-id
SHAREPOINT_TARGET_FOLDER=Shared Documents/CSV Files

# Message Filtering
FILTER_SENDER_PATTERNS=reports@company.com,automation@partner.com
FILTER_SUBJECT_PATTERNS=daily report,csv export,automated data
FILTER_MAX_AGE_DAYS=7

# Duplicate Detection (for overlapping log files)
ENABLE_DUPLICATE_DETECTION=true
DUPLICATE_DETECTION_WINDOW_MINUTES=15

# Application Settings
LOG_LEVEL=INFO
TEMP_DIRECTORY=/tmp/email-csv-extractor
DATA_DIRECTORY=/app/data